if [[ $1 == "--reset" ]]; then
    rm project.db
    rm datacache/*
    rm log*.txt*
    rm debug-*.zip
elif [[ $1 == "--deploy" ]]; then
    python manage.py collectstatic --noinput
fi

python manage.py clean_pyc --path .
python manage.py syncdb --noinput
python manage.py reload

